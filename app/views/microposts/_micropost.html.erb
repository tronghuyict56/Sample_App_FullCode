<li id="micropost-<%= micropost.id %>">
    <% if !micropost.user.avatar.blank? %>
      <%= link_to image_tag(micropost.user.avatar, height: 50, width: 50), micropost.user %>
    <% else %>
  	  <%= link_to image_tag('avatar_default.jpg', alt: "User avatar", height: 50, width: 50), micropost.user %>
    <% end %>
  	<span class="user"><%= link_to micropost.user.name, micropost.user , id: "link" %></span>
  	<span class="content">
  		<%= micropost.content %>
  		<%= image_tag micropost.picture.url if micropost.picture? %>
  	</span>
 	<span class="timestamp">
    	Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    	<% if current_user?(micropost.user) %>
      		<%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
    	<% end %>
  </span>
</li>