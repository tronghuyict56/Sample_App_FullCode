<% if !current_user.avatar.blank? %>
    <%= link_to image_tag(current_user.avatar, alt: "User avatar", id: "show-avatar"), current_user %>
<% else %>
    <%= link_to image_tag('avatar_default.jpg', alt: "User avatar", id: "show-avatar"), current_user %>
<% end %>
<h1><%= current_user.name %></h1>
<span><%= link_to "view my profile", current_user, id: "link" %></span>
<span><%= pluralize(current_user.microposts.count, "micropost") %></span>