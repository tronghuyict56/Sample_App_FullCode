<% provide(:title, @user.name) %> 
<p id="notice"><%= notice %></p>

<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<% if !@user.avatar.blank? %>
					<%= image_tag(@user.avatar, alt: "User avatar", id: "show-avatar") %>
				<% else %>
					<%= image_tag('avatar_default.jpg', alt: "User avatar", id: "show-avatar") %>
				<% end %>
				
				<%= @user.name %>			
			</h1>
		</section>
		<section class="stats">
      		<%= render 'shared/stats' %>
    	</section>
	</aside>

    <div class="col-md-8">
    	<%= render 'follow_form' if logged_in? %>
	    <% if @user.microposts.any? %>
	      	<h3>Microposts (<%= @user.microposts.count %>)</h3>
	      	<ol class="microposts">
	        	<%= render @microposts %>
	      	</ol>
	      	<%= will_paginate @microposts %>
	    <% end %>
  	</div>
</div>



